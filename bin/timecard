#!/usr/bin/perl

my $totalMinutes = 0 ;

while (<>)
{
   my $diff ;
   my $negate = 0 ;
   chomp ;

   if ( s/^\+// )
   {
   }
   elsif ( s/^-// )
   {
      $negate = 1 ;
   }

   if ( /(.*)-(.*)/ )
   {
      my ($a, $b) = ($1, $2) ;
      my $bmin = toMinutes($b) ;
      my $amin = toMinutes($a) ;

      if ( $bmin >= $amin )
      {
         $diff = ($bmin - $amin) ;
      }
      else
      {
         $diff = ($bmin + 12*60 - $amin) ;
      }
   }
   else
   {
      $diff = toMinutes($_) ;
   }

   $diff = -$diff if ( $negate ) ;

#print "$_: $diff\n" ;
   $totalMinutes += $diff ;
}

my $hours = int($totalMinutes/60) ;
my $minutes = int($totalMinutes % 60) ;
printf "$hours:%02d\n", $minutes ;

exit ;

sub toMinutes
{
   my ($t) = @_ ;

   $t =~ /(.*):(.*)/ or die ;
   my ($h, $m) = ($1, $2) ;

   return $h*60 + $m ;
}
